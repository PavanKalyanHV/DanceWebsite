extends base.pug

block script
    script
            include ../static/script.js

block style 
    style 
            include ../static/style.css
            include ../static/contactform.css

block content
    div.myform 
        h1 Contact Us 
        form(action="/contact" method="post" class="contact-form")
            input(class="form-input-field" type="text" name="first-name" placeholder="Enter first name")
            input(class="form-input-field" type="text" name="last-name" placeholder="Enter last name")
            input(class="form-input-field" type="phone" name="phone-no" placeholder="Enter phone number")
            input(class="form-input-field" type="text" name="address" placeholder="Enter address")
            //- input(class="form-input-field" type="" name="first-name" placeholder="Enter your concern")
            textarea(class="form-input-concern" placeholder="Enter your concern" name="concern" cols="30" rows="10") 
            button(class="form-submit-buton") 
                p Submit
